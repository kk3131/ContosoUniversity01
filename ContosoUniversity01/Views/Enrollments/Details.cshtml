@model ContosoUniversity01.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Course != null)
            {
                @Html.DisplayFor(model => model.Course.CourseID)
            }
            else
            {
                <span class="text-muted">No course data</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Student != null)
            {
                @($"{Model.Student.LastName} {Model.Student.FirstMidName}")
            }
            else
            {
                <span class="text-muted">No student data</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.EnrollmentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
